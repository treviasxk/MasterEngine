<UserControl xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Class="MasterEngine.Editor.Layout.Tab">
    <Panel
        DragDrop.AllowDrop="True"
        HorizontalAlignment="Left"
        Width="100"
        Margin="1 0"
        Background="#121220">
        <PathIcon
            x:Name="TabIcon"
            ZIndex="2"
            Margin="5 0"
            Width="12"
            Height="12"
            VerticalAlignment="Center"
            HorizontalAlignment="Left"/>
        <TextBlock
            TextTrimming="CharacterEllipsis"
            TextWrapping="NoWrap"
            TextAlignment="Center"
            x:Name="TabTitle"
            FontSize="11"
            Padding="21 2"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Center"
            Foreground="White"
            Background="#121220"/>
        <TextBlock
            x:Name="TabClose"
            Width="10"
            Height="10"
            Margin="5 0"
            FontSize="11"
            HorizontalAlignment="Right"
            VerticalAlignment="Center">X</TextBlock>
    </Panel>
</UserControl>