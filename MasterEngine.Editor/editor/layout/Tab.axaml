<UserControl xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Class="MasterEngine.Editor.Layout.Tab">
    <Panel
        DragDrop.AllowDrop="True"
        HorizontalAlignment="Left"
        Width="100"
        Margin="2 0"
        Background="#121220">
        <PathIcon
            x:Name="TabIcon"
            ZIndex="2"
            Margin="5 0 5 0"
            Width="12"
            Height="12"
            VerticalAlignment="Center"
            HorizontalAlignment="Left"/>
        <Button
            x:Name="TabTitle"
            FontSize="11"
            Padding="20 2 20 2"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Foreground="White"
            Background="#121220"/>
        <Button
            x:Name="TabClose"
            Width="25"
            Height="25"
            FontSize="11"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            Background="#121220">X</Button>
    </Panel>
</UserControl>